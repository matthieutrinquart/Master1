<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <EditText
            android:id="@+id/idNom"
            android:layout_height="56dp"
            android:hint="Nom"
            android:gravity="center"
            android:layout_width="153dp" tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.058" app:layout_constraintVertical_bias="0.038"/>

    <EditText
            android:id="@+id/idPrenom"
            android:layout_height="55dp"
            android:hint="Prenom"
            android:gravity="center"
            android:layout_width="160dp" tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.936" app:layout_constraintVertical_bias="0.039"/>
    <EditText
            android:id="@+id/idDate"
            android:layout_height="49dp"
            android:inputType="phone"
            android:hint="Date de naissance"
            android:layout_width="164dp" tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.064" app:layout_constraintVertical_bias="0.316"/>
    <EditText
            android:id="@+id/idNum"
            android:inputType="phone"
            android:layout_height="49dp"
            android:hint="numéro de téléphone"
            android:gravity="center"
            android:layout_width="185dp" tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.929" app:layout_constraintVertical_bias="0.316"/>
    <EditText
            android:id="@+id/idMail"
            android:layout_height="46dp"
            android:hint="Adresse mail"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:layout_width="353dp" tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.174" app:layout_constraintHorizontal_bias="0.466"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="366dp"
            android:layout_height="194dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488" app:layout_constraintVertical_bias="0.53"
            android:id="@+id/linearLayout">
        <CheckBox android:id="@+id/CheckSport"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Sport"/>
        <CheckBox android:id="@+id/CheckMusique"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="musique"/>
        <CheckBox android:id="@+id/CheckLecture"
                  android:layout_width="wrap_content"
                  android:text="Lecture"
                  android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/CheckSynchoniser"
                  android:layout_width="wrap_content"
                  android:text="Synchroniser"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
            android:text="Soumettre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/soumettre"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.944"
            android:layout_marginTop="524dp"/>
    <Button
            android:text="Telecharger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/telecharger"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.141"
            android:layout_marginTop="524dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>